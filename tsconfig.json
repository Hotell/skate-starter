{
  "compilerOptions": {
    "module": "es2015",
    "target": "es5",
    "moduleResolution": "node",
    "strict": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "jsx": "react",
    "jsxFactory": "h",
    "noEmitHelpers": true,
    "importHelpers": true,
    "pretty": true,
    "outDir": "ts-output",
