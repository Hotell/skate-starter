{
  "name": "skate-starter",
  "version": "1.2.0",
  "repository": "https://www.github.com/Hotell/skate-starter",
  "description": "SkateJS + Typescript starter",
  "keywords": [
    "webcomponents",
    "reactive-ui",
    "skatejs",
    "incremental-dom"
  ],
  "author": "Martin Hochel",
  "license": "MIT",
  "main": "main.js",
  "scripts": {
    "start": "webpack-dev-server --env.dev --hot",
    "start:prod": "pushstate-server dist/",
    "prebuild": "npm run cleanup && npm run verify",
    "build": "webpack --env.prod",
    "cleanup": "shx rm -rf dist",
    "ts:lint": "tslint --project tsconfig.json --format codeFrame",
    "ts:lint:fix": "npm run ts:lint -- --fix",
    "ts:format": "prettier --list-different \"{src,__{tests,mocks}__}/**/*.{ts,tsx}\"",
    "ts:format:fix": "prettier --write \"{src,__{tests,mocks}__}/**/*.{ts,tsx}\"",
    "ts:style": "npm run ts:format && npm run ts:lint",
    "ts:style:fix": "npm run ts:format:fix && npm run ts:lint:fix",
    "cz": "git-cz",
    "precommit": "lint-staged",
    "commitmsg": "validate-commit-msg",
    "verify": "npm run ts:style && npm test",
    "test": "echo \"Error: no test specified\" && exit 0",
    "prepush": "npm run verify",
    "release": "npm run release:local && npm run release:github",
    "release:local": "npm run build && standard-version",
    "release:github": "git push --no-verify --follow-tags origin master",
    "profile": "npm run profile:stats && npm run profile:run",
    "profile:run": "webpack-bundle-analyzer stats.json dist",
    "profile:stats": "webpack --env.prod --profile --json > stats.json"
  },
  "engines": {
    "node": ">=8"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    },
    "validate-commit-msg": {
      "types": "conventional-commit-types",
      "maxSubjectLength": 120
    }
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "trailingComma": "es5",
    "arrowParens": "always"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,css,html.md}": [
      "prettier --write",
      "git add"
    ]
  },
  "devDependencies": {
    "awesome-typescript-loader": "3.4.1",
    "commitizen": "2.9.6",
    "copy-webpack-plugin": "4.2.3",
    "css-loader": "0.28.7",
    "cz-conventional-changelog": "2.1.0",
    "extract-text-webpack-plugin": "3.0.2",
    "html-webpack-plugin": "2.30.1",
    "husky": "0.14.3",
    "lint-staged": "6.0.0",
    "prettier": "1.9.1",
    "progress-bar-webpack-plugin": "1.10.0",
    "serve": "6.4.1",
    "shx": "0.2.2",
    "source-map-loader": "0.2.3",
    "standard-version": "4.2.0",
    "strip-json-comments-cli": "1.0.1",
    "style-loader": "0.19.0",
    "to-string-loader": "1.1.5",
    "tslint": "5.8.0",
    "tslint-react": "3.2.0",
    "typescript": "2.6.2",
    "validate-commit-msg": "2.14.0",
    "webpack": "3.10.0",
    "webpack-bundle-analyzer": "2.9.1",
    "webpack-config-utils": "2.3.0",
    "webpack-dev-server": "2.9.7"
  },
  "dependencies": {
    "@skatejs/renderer-preact": "0.2.0",
    "@webcomponents/template": "1.2.0",
    "@webcomponents/webcomponents-platform": "1.0.0",
    "@webcomponents/webcomponentsjs": "1.0.20",
    "es6-promise": "4.1.1",
    "preact": "8.2.6",
    "sanitize.css": "5.0.0",
    "skatejs": "5.0.0",
    "snarkdown": "1.2.2",
    "tslib": "1.8.1"
  }
}
